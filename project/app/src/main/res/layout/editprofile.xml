<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Edit Profile"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imguser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/showuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="205dp"
        android:text="Username :"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/showpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/showuser"
        android:layout_marginBottom="233dp"
        android:text="Password :"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/showname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/showuser"
        android:layout_marginBottom="180dp"
        android:text="Name :"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/showemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/showuser"
        android:layout_marginBottom="129dp"
        android:text="Email :"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/user"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showuser"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:textSize="20dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showpass"
        android:layout_alignStart="@+id/user"
        android:inputType="textPassword"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showname"
        android:layout_alignStart="@+id/user"
        android:inputType="text"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showemail"
        android:layout_alignStart="@+id/user"
        android:inputType="textEmailAddress"
        android:textSize="20dp" />

    <Button
        android:id="@+id/editbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp"
        android:layout_marginStart="87dp"
        android:background="#26a599"
        android:text="ok" />

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editbtn"
        android:layout_marginEnd="93dp"
        android:background="#26a599"
        android:text="cancel" />

</RelativeLayout>
