<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="WINK WINK"
        android:textSize="35dp" />

    <ImageView
        android:id="@+id/imgShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        app:srcCompat="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/nameCartoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="201dp"
        android:text="Name : "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/addname"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nameCartoon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/detailCartoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nameCartoon"
        android:layout_marginBottom="225dp"
        android:text="Detail : "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/adddetail"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/detailCartoon"
        android:layout_alignStart="@+id/addname"
        android:inputType="text" />

    <Button
        android:id="@+id/addbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imgShow"
        android:layout_marginBottom="82dp"
        android:background="#26a599"
        android:text="add" />

</RelativeLayout>
